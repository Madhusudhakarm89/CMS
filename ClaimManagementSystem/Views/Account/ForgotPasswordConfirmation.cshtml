@model ForgotPasswordViewModel

@{
    ViewBag.Title = "Forgot Password Confirmation";
}


<section id="Confirm" class="col-xs-12">

    <div class="form-group col-xs-12 loginFormHeader">
        <section class="paddingBottom20 text-left">
            Forgot Password?
        </section>
    </div>
    <section class="form-group col-xs-12 paddingBottom20">
        Reset password instruction sent to <strong>@Model.Email</strong>, please check your mail account for further instructions.
    </section>
    <section class="form-group col-xs-12 paddingBottom20 paddingTop20 text-center loginFormFooter">
        @Html.ActionLink("Click here", "Login", "Account", null, new { Area = string.Empty, id = "confirmLogin", @class = "BlueNavy bold" }) to Login
    </section>

    <script type="text/javascript">
        $(function () {
            $("#confirmLogin").on("click", function (e) {
                e.preventDefault();

                $("#Confirm, #Forgot").slideUp()
                $("#UserLogin").slideDown("fast")
            });
        });
    </script>
</section>