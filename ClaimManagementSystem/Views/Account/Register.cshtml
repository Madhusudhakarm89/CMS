@model RegisterUserViewModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div id="RegistrationContainer">
    <section id="UserRegistration" class="col-xs-12">
        @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "registrationForm", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group col-xs-12 loginFormHeader">
                <section class="paddingBottom20 text-left">
                    Register User
                </section>
            </div>
            <div class="form-group col-xs-12 text-left">
                @Html.DisplayNameFor(m => m.Salutation)
                @(Html.Kendo().TextBoxFor(m => m.Salutation).HtmlAttributes(new { @class = "form-control" }))
                @Html.ValidationMessageFor(m => m.Salutation)
            </div>

            <div class="form-group col-xs-12 text-left">
                @Html.DisplayNameFor(m => m.FirstName)
                @(Html.Kendo().TextBoxFor(m => m.FirstName).HtmlAttributes(new { @class = "form-control" }))
                @Html.ValidationMessageFor(m => m.FirstName)
            </div>

            <div class="form-group col-xs-12 text-left">
                @Html.DisplayNameFor(m => m.LastName)
                @(Html.Kendo().TextBoxFor(m => m.LastName).HtmlAttributes(new { @class = "form-control" }))
                @Html.ValidationMessageFor(m => m.LastName)
            </div>

            <div class="form-group col-xs-12 text-left">
                @Html.DisplayNameFor(m => m.Email)
                @(Html.Kendo().TextBoxFor(m => m.Email).HtmlAttributes(new { @class = "form-control" }))
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div class="form-group col-xs-12 text-left">
                @Html.DisplayNameFor(m => m.Password)
                @(Html.Kendo().TextBoxFor(m => m.Password).HtmlAttributes(new { type = "password", @class = "form-control password" }))
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="form-group col-xs-12 text-left">
                @(Html.Kendo().Button().Name("Register").HtmlAttributes(new { type = "submit", @class = "pull-right" }).Content("Create"))
            </div>
        }
    </section>
    <script type="text/javascript">
        $(function () {
            $(".loginForm").fadeIn("slow");
        });
    </script>
</div>